@model CoachBuddy.Application.Exercise.ExerciseDto

<h2>Delete Exercise</h2>

<h3>Are you sure you want to delete this exercise?</h3>
<div>
    <h4>@Model.Name</h4>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Muscle Group:</strong> @Model.MuscleGroup</p>
    <p><strong>ID:</strong> @Model.Id</p>
</div>

<form asp-action="DeleteConfirmed" asp-route-encodedName="@Model.EncodedName" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
