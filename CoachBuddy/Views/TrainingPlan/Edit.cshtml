@using CoachBuddy.Application.TrainingPlan.Commands.EditTrainingPlan
@model EditTrainingPlanCommand

@{
    ViewData["Title"] = "Edit Training Plan";
}

<h1>Edit @Model.Name</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @* Additional fields for exercises or other properties can go here if needed *@
            <div class="form-group">
                <input class="btn btn-outline-primary btn-sm" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

<div class="m-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
