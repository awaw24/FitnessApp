@model CoachBuddy.Application.TrainingPlan.TrainingPlanDto

<h1>@Model.Name - Details</h1>

<!-- Display Exercises -->
@if (Model.TrainingPlanExercises.Any())
{
    <h3>Exercises in this Training Plan</h3>
    <ul>
        @foreach (var exercise in Model.TrainingPlanExercises)
        {
            <li>@exercise.EncodedName (Sets: @exercise.Sets, Reps: @exercise.Repetitions, Rest: @exercise.RestTime seconds)</li>
        }
    </ul>
}
else
{
    <p>No exercises added yet.</p>
}

@if (Model.IsEditable)
{
    <h3>Add Exercises</h3>
    <form asp-action="AddExercisesToTrainingPlan" method="post">
        <div class="form-group">
            <label for="searchQuery">Search Exercises</label>
            <input type="text" name="searchQuery" class="form-control" id="searchQuery" placeholder="Search for exercises" />
        </div>

        <div class="form-group mt-2">
            <label for="exercises">Select Exercises</label>
            <select name="exerciseIds" class="form-control" id="exercises" multiple>
                @foreach (var exercise in Model.AvailableExercises)
                {
                    <option value="@exercise.Id">@exercise.Name</option>
                }
            </select>
        </div>

        <input type="hidden" name="trainingPlanId" value="@Model.Id" />
        <button type="submit" class="btn btn-primary mt-3">Add Selected Exercises</button>
    </form>
}

<a class="btn btn-secondary mt-3" asp-action="Index">Back to List</a>
