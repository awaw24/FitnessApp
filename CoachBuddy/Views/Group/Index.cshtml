@using CoachBuddy.Application.Common
@model PaginatedResult<CoachBuddy.Application.Group.GroupDto>

@{
    ViewData["Title"] = "Groups";
}

<h1>Groups</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">
        <i class="bi bi-person-add"></i> Add new group
    </a>
</p>
<form asp-action="Search" method="get">
    <input type="text" name="searchTerm" placeholder="Search groups..." class="form-control" />
    <button type="submit" class="btn btn-primary" id="searchButton">Search</button>
</form>

@if (Model.Items.Any())
{
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model.Items)
            {
                <tr>
                    <td>@group.Name</td>
                    <td>@group.Description</td>
                    <td>@group.CreatedAt?.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-controller="Group" asp-action="Details" asp-route-encodedName="@group.EncodedName">
                            <i class="bi bi-person-vcard"> Details</i>
                        </a>
                        @if (group.IsEditable)
                        {
                            <a class="btn btn-outline-secondary btn-sm" asp-controller="Group" asp-action="Edit" asp-route-encodedName="@group.EncodedName">
                                <i class="bi bi-person-fill-gear"> Edit</i>
                            </a>
                            <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@group.Id">
                                <i class="bi bi-trash"> Delete</i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No groups found.</p>
}

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="btn btn-outline-secondary btn-sm" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
            </li>
        }
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                <a class="btn btn-outline-secondary btn-sm" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
            </li>
        }
        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="btn btn-outline-secondary btn-sm" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
            </li>
        }
    </ul>
</nav>
