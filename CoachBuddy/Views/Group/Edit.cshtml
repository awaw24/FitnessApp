@using CoachBuddy.Application.Group.Commands
@model CoachBuddy.Application.Group.Commands.EditGroup.EditGroupCommand

@{
    ViewData["Title"] = "Edit Group";
}

<h1>Edit Group: @Model.Name</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-outline-primary btn-sm" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

<div class="m-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<h3>Members:</h3>

<div id="members" class="row" data-encoded-name="@Model.EncodedName"></div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}