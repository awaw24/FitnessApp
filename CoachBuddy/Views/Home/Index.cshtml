@model CoachBuddy.MVC.Models.HomeViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h1>Welcome to CoachBuddy</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Current Number of Clients</h5>
                    <p class="card-text">
                        <strong>@Model.ClientCount</strong>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Current Number of Groups</h5>
                    <p class="card-text">
                        <strong>@Model.GroupCount</strong>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Current Number of Exercises</h5>
                    <p class="card-text">
                        <strong>@Model.ExerciseCount</strong>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Current Number of Training Programs</h5>
                    <p class="card-text">
                        <strong>0</strong>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
